<article>
  <form id="edit-post-<%= post.id %>" method="post" action="<%= Admin::Routes.url(:posts, id: post.id) %>">
    <input type="hidden" name="_method" value="patch" />

    <p>
      <label for="title">Title</label>
      <input type="text" name="post[title]" value="<%= post.title %>" placeholder="Title" required>
    </p>
    <p>
      <label for="content">Content</label>
      <textarea name="post[content]" placeholder="Content"><%= post.content %></textarea>
    </p>

    <p class="buttons">
      <button type="submit">Update</button> or <a href="<%= Admin::Routes.url(:posts) %>">Back</a>
    </p>
  </form>
</article>